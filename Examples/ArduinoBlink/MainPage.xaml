<Page
    x:Class="ArduinoBlink.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ArduinoBlink"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>

                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="SerialOutputBackgroundBrush" Color="#15000000"/>
                </ResourceDictionary>

                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="SerialOutputBackgroundBrush" Color="#20FFFFFF"/>
                </ResourceDictionary>

                <ResourceDictionary x:Key="HighContrast">
                    <SolidColorBrush x:Key="SerialOutputBackgroundBrush" Color="Transparent"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*" MinHeight="150"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Viewbox HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="50"
                    Stretch="Uniform">

                <Grid Width="285.2" Height="209">

                    <Image x:Name="backgroundImage"
                          Source="/Assets/ArduinoUno.png"
                          Stretch="Fill"/>


                    <Canvas x:Name="IoLedPower" IsHitTestVisible="False" 
                            Visibility="Collapsed">
                        <Ellipse Canvas.Left="236.15" Canvas.Top="63.5"
                                    Width="12" Height="12"
                                    Fill="#90FF0000"/>

                        <Ellipse Canvas.Left="237.65" Canvas.Top="66"
                                   Width="9" Height="7"
                                    Fill="#70FFFFFF" />

                        <Ellipse Canvas.Left="239.15" Canvas.Top="67.75"
                                   Width="6" Height="3.5"
                                    Fill="#A0FFFFFF" />

                        <Ellipse Canvas.Left="240.65" Canvas.Top="68.5"
                                   Width="3" Height="2"
                                    Fill="#FFFFFFFF" />
                    </Canvas>

                    <Canvas x:Name="IoLedBuiltIn"  IsHitTestVisible="False" Visibility="Collapsed">
                        <Ellipse Canvas.Left="124.5" Canvas.Top="47"
                                 Width="12" Height="12"
                                 Fill="#700000FF"/>
                        <Ellipse Canvas.Left="126.0" Canvas.Top="49.5"
                                 Width="9" Height="7"
                                 Fill="#70FFFFFF"/>
                        <Ellipse Canvas.Left="127.5" Canvas.Top="51.25"
                                 Width="6" Height="3.5"
                                 Fill="#A0FFFFFF"/>
                        <Ellipse Canvas.Left="129.0" Canvas.Top="52"
                                 Width="3" Height="2"
                                 Fill="#FFFFFFFF"/>
                    </Canvas>

                    <Canvas x:Name="IoLedTx"  IsHitTestVisible="False" Visibility="Collapsed">
                        <Ellipse Canvas.Left="124.5" Canvas.Top="63"
                                 Width="12" Height="12"
                                 Fill="#90FFAA00"/>
                        <Ellipse Canvas.Left="126.0" Canvas.Top="66"
                                 Width="9" Height="7"
                                 Fill="#70FFFFFF"/>
                        <Ellipse Canvas.Left="127.5" Canvas.Top="67.7"
                                 Width="6" Height="3.5"
                                 Fill="#A0FFFFFF"/>
                        <Ellipse Canvas.Left="129.0" Canvas.Top="68.5"
                                 Width="3" Height="2"
                                 Fill="#FFFFFFFF"/>
                    </Canvas>

                    <Canvas x:Name="IoLedRx" IsHitTestVisible="False" Visibility="Collapsed">
                        <Ellipse Canvas.Left="124.5" Canvas.Top="71.5"
                                 Width="12" Height="12"
                                 Fill="#90AAFF00"/>
                        <Ellipse Canvas.Left="126.0" Canvas.Top="74"
                                 Width="9" Height="7"
                                 Fill="#70FFFFFF"/>
                        <Ellipse Canvas.Left="127.5" Canvas.Top="75.7"
                                 Width="6" Height="3.5"
                                 Fill="#A0FFFFFF"/>
                        <Ellipse Canvas.Left="129.0" Canvas.Top="76.5"
                                 Width="3" Height="2"
                                 Fill="#FFFFFFFF"/>
                    </Canvas>

                    <Canvas x:Name="resetButtonHolder" Visibility="Collapsed">
                        <Ellipse Canvas.Left="47.333" Canvas.Top="16.75"
                                 Width="12" Height="12"
                                 Fill="#E0FF0000"/>
                        <Button x:Name="ResetButton"
                                Width="24.5" Height="24"
                                Canvas.Left="41" Canvas.Top="11"
                                Background="Transparent"
                                Opacity="1"
                                Click="resetButton_Click"
                                ToolTipService.ToolTip="Reset Arduino"/>
                    </Canvas>
                </Grid>
            </Viewbox>

            <Button x:Name="runButtonControl"
                        IsTabStop="True"
                        Content="Start"
                        Width="100"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="10,20,10,20"
                        Click="runButtonControl_Click"/>

            <Grid HorizontalAlignment="Right"
                  VerticalAlignment="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <CheckBox x:Name="clearInputOnSendCheckBox"
                        Grid.Column="0"
                        IsChecked="True"
                        MinWidth="10"
                        Margin="5"
                        Padding="5,0,5,0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Stretch"
                        VerticalContentAlignment="Center"
                        ToolTipService.ToolTip="Clear serial input on send"
                        ToolTipService.Placement="Top"
                        Content="Clear on send"
                        FontFamily="Cascadia Mono"
                        FontSize="11"/>

                <CheckBox x:Name="newlineCheckBox"
                       Grid.Column="1"
                       IsChecked="True"
                       MinWidth="10"
                       Margin="5"
                       Padding="5,0,5,0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Stretch"
                       VerticalContentAlignment="Center"
                       ToolTipService.ToolTip="Append newline to serial input"
                       ToolTipService.Placement="Top"
                       Content="Newline"
                       FontFamily="Cascadia Mono"
                       FontSize="11"/>
            </Grid>
        </Grid>


        <Grid Grid.Row="1" Height="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="serialInputTextBox"
                    Grid.Column="0"
                     VerticalAlignment="Center"
                    TextWrapping="NoWrap"
                    Margin="10,10,10,10"
                 />

            <Button x:Name="serialInputButton"
                    Grid.Column="3"
                    IsTabStop="True"
                    Margin="5,10,5,10"
                    Padding="10,0,10,0"
                    IsEnabled="False"
                    Background="{ThemeResource SerialOutputBackgroundBrush}"
                    ToolTipService.ToolTip="Return serial input"
                    ToolTipService.Placement="Right"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"    
                    Click="serialInputButton_Click">
                <TextBlock Text="⏎"
                           FontSize="23" 
                           FontFamily="Cascadia Mono" 
                           FontWeight="Light"/>
            </Button>
        </Grid>

        <ScrollViewer x:Name="serialOutputScroll"
                        Grid.Row="2"
                        Background="{ThemeResource SerialOutputBackgroundBrush}"
                        Grid.ColumnSpan="2"
                        Padding="0,2,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">

            <TextBlock x:Name="serialOutputTextBlock"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Margin="20,10,20,10"
                          FontFamily="Cascadia Mono"
                          FontSize="11"
                          IsTextSelectionEnabled="True"
                          FontWeight="Normal"/>
        </ScrollViewer>

        <Grid Grid.Row="2"
              HorizontalAlignment="Right"
              VerticalAlignment="Top"
              Height="Auto" Padding="5,5,5,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <CheckBox x:Name="autoScrollCheckBox"
                      Grid.Column="0"
                      IsChecked="True"
                      MinWidth="10"
                      Margin="0"
                      Padding="5,0,5,0"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Stretch"
                      VerticalContentAlignment="Center"
                      FontFamily="Cascadia Mono"
                      FontSize="11"
                      ToolTipService.ToolTip="Auto scroll serial output"
                      ToolTipService.Placement="Bottom"
                      Content="Auto Scroll"
                      Click="autoScrollCheckBox_Click"/>

            <Button x:Name="clearOutputButton"
                    Grid.Column="1"
                    IsTabStop="True"
                    Padding="0,0,0,0"
                    Width="42"
                    Height="30"
                    Background="Transparent"
                    ToolTipService.ToolTip="Clear serial output"
                    ToolTipService.Placement="Bottom"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,0,0,0"
                    Click="clearOutputButton_Click">
                <TextBlock Text="🗑" 
                    FontSize="16" 
                    FontFamily="Cascadia Mono" 
                    FontWeight="Light"/>
            </Button>
        </Grid>
    </Grid>
</Page>